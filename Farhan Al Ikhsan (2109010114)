#2 R-6.4 (rekursifitas stack)
def tampilkanAngka (batas,i = 1):
    if(i < batas):
        #Rekursifitas terjadi
        tampiklkanAngka(batas,i + 1)
        
    print(f'perulangan ke {i}')
# memanggil fungsi tampilan angka
# untuk pertama kali
    tampilkanAngka(20)
#Clear rekursif 
tampilkanAngka = [20]
del tampilkanAngka [:]
print("tampilkanAngka:", tampilkanAngka)
